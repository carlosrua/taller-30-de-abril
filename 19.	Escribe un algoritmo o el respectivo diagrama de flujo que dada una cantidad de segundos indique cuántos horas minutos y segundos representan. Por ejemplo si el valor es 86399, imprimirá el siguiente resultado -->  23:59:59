while True:
    try:
         s = int(input("Ingrese los segundos que desee= "))
         h = (int(s/3600))
         m = int((s - (h * 3600)) / 60)
         se = s - ((h * 3600) + (m * 60))
         print(str(h)+"h:"+str(m)+"m:"+str(se)+"s")
         break
    except:
        print("Ingrese bien los valores")
